<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>files</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <files>
        <!-- Rest module files -->
        <file>
            <source>rest/src/main/resources/rest.xml</source>
            <outputDirectory>app-base/webapps</outputDirectory>
        </file>
        <file>
            <source>rest/target/rest.war</source>
            <outputDirectory>app-base/webapps</outputDirectory>
        </file>

        <!-- Voice module files -->
        <file>
            <source>voice/target/voice.jar</source>
            <outputDirectory>astive/apps</outputDirectory>
        </file>

        <!-- Webapp module files-->
        <file>
            <source>webui/src/main/resources/webui.xml</source>
            <outputDirectory>app-base/webapps</outputDirectory>
        </file>
        <file>
            <source>webui/src/main/resources/web.xml</source>
            <outputDirectory>app-base/webapps</outputDirectory>
        </file>
        <file>
            <source>webui/target/webui.war</source>
            <outputDirectory>app-base/webapps</outputDirectory>
        </file>
    </files>

    <!-- Resources module files -->
    <fileSets>
        <fileSet>
            <directory>resources/src/main/resources/META-INF/resources</directory>
            <outputDirectory>app-base/webapps/static</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>